pcm.!default {
	type asym
		playback.pcm "out"
#		capture.pcm "MicCapture"
}


pcm.out {
	type plug
		slave.pcm "pch"
}

pcm.pch {
	type dmix
		ipc_key 6
		ipc_key_add_uid true
		slave {
			pcm "hw:PCH"
				format S32_LE
				rate {
					@func igetenv
						vars [ JACK_SAMPLE_RATE ]
						default 48000
				}
			period_size {
				@func igetenv
					vars [ JACK_PERIOD_SIZE ]
					default 1024
			}
			buffer_size 4096
		}
}


ctl.pch {
	type hw
		card "hw:PCH"
}



